[{
  "name": "${container_name}",
  "image": "${image}",
  "networkMode": "awsvpc",

  "environment": [
    {
      "name": "ENV",
      "value": "${environment}"
    },
    {
      "name": "LOG_LEVEL",
      "value": "${log_level}"
    },
     {
      "name": "BUCKET",
      "value": "${data_bucket}"
    },
    {
      "name": "REDIS_ENDPOINT",
      "value": "${redis_endpoint}"
    }
  ],
  "secrets": [
    {
      "name": "GFW_DATA_API_KEY",
      "valueFrom": "${gfw_data_api_key}"
    },
    {
      "name": "MONGODB_SECRET",
      "valueFrom": "${db_secret_arn}"
    }
  ],
  "portMappings": [
    {
      "containerPort": ${container_port},
      "hostPort": ${container_port}
    }
  ],
  "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${container_name}"
       }
  }
}]
